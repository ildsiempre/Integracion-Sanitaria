<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="@dimen/tab_linear_layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos última revisión (Desplegado)"
            android:textColor="@color/material_blue_dark"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/tab_linear_layout_padding"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ice89"
            android:padding="@dimen/tab_linear_layout_padding"
            android:layout_gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/material_blue_light"
        android:layout_marginLeft="@dimen/tab_linear_layout_padding"
        android:layout_marginRight="@dimen/tab_linear_layout_padding"
        />
    <!--TODO: sustituir por frameLayout-->
    <TextView
        android:padding="@dimen/parent_linearLayout_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Resultados analitica\n\nProblemas de respiración y de conciliar el sueño.\n\nDiagnóstico: Problemas de estres.\nSe recomienda descanso."/>

</LinearLayout>