<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usuario.integracionsanitaria.ZonaPrincipal.SeguimientoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_red_pastel"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ice89"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuidado! Ola de frÃ­o!"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="end">
        <ImageView
            android:layout_width="46dp"
            android:layout_height="10dp"
            android:src="@drawable/triangulo"
            android:layout_gravity="end"/>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="end">
            </FrameLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/seguimiento_listView"
        android:layout_marginLeft="@dimen/tab_linear_layout_padding"
        android:layout_marginRight="@dimen/tab_linear_layout_padding"
        android:layout_marginBottom="@dimen/tab_linear_layout_padding"
        android:dividerHeight="5dp"
        android:divider="@color/material_grey_background"/>

</LinearLayout>
